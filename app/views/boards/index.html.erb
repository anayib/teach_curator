<% if user_signed_in? %>
  <li><%= image_tag Gravatar.new(current_user.email).image_url if current_user%></li>
<% end %>

<h1>Listing Boards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Category</th>
      <th>Level</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.title %></td>
        <td><%= board.description %></td>
        <td><%= image_tag board.image_url, size: "1000" %></td>
        <td><%= board.category %></td>
        <td><%= board.level %></td>
        <td><%= "#{board.user.name} #{board.user.lastname}" %></td>
        <td><%= link_to 'Show', board %></td>
        <% if board.user == current_user %>
          <td><%= link_to 'Edit', edit_board_path(board) %></td>
          <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


