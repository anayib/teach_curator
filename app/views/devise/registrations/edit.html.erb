<div class="col-sm-6">
  <div class="well bs-component margin-top">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal", html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= link_to 'Back to Curator', boards_path %>
      <h2 class="cta-title">Edit <%= resource_name.to_s.humanize %></h2>
      <hr>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :lastname, autofocus: true, placeholder: "Lastname", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
       <% texto = "Password (leave blank if you don't want to change it)" %>
       <%= f.password_field :password, autocomplete: "off", placeholder: texto, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confimation", class: "form-control" %>
      </div>

      <div class="form-group">
        <% texto = "current_password (we need your current password to confirm your changes)" %>
        <%= f.password_field :current_password, autocomplete: "off", placeholder: texto, class: "form-control" %>
      </div>

      <div class="form-group"><%= f.submit "Update", class: "btn btn-success btn-lg" %></div>

    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %></p>

  </div>
</div>
