

<div class="col-lg-6">
  <div class="well bs-component">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
      <%= devise_error_messages! %>

      <h2>Sign up</h2>

      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "col-lg-10 form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :lastname %><br />
        <%= f.text_field :lastname, autofocus: true, class: "col-lg-10 form-control"  %></div>

      <div class="form-group">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, class: "col-lg-10 form-control"  %></div>
      
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "col-lg-10 form-control"  %></div>

      <div class="form-group">
        <%= f.label :password %> 
        <% if @validatable %>
          <i>(<%= @minimum_password_length %> characters minimum)</i>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "col-lg-10 form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-lg-10 form-control"  %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary"  %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
