<div class="col-sm-6 ">
  <div class="well bs-component margin-top">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
      <%= devise_error_messages! %>
      <%= link_to 'Back to Curator', boards_path %>
      <h2 class="cta-title">Sign up</h2>
      <hr>
      <div class="form-group">
        <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.text_field :lastname, autofocus: true, placeholder: "Lastname", class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= f.text_field :username, autofocus: true, placeholder: "Username", class: "form-control"  %>
      </div>
      
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control"  %>
      </div>

      <div class="form-group">
        <% if @validatable %>
          <% texto = "Password (Minimum #{@minimum_password_length} characters)" %>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: texto %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password confirmation" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-success btn-lg" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
