    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-horizontal") do |f| %>
      <%= devise_error_messages! %>

      <h2>Sign up</h2>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class: "col-sm-4 form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :lastname %>
        <%= f.text_field :lastname, class: "col-sm-4 form-control"  %></div>

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: "col-sm-4 form-control"  %></div>
      
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "col-sm-4 form-control"  %></div>

      <div class="form-group">
        <%= f.label :password %> 
        <% if @validatable %>
          <i>(<%= @minimum_password_length %> characters minimum)</i>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "col-sm-4 form-control"  %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "col-sm-4 form-control"  %>
      </div>

      <div>
        <%= f.submit "Sign up", class: "form-control btn btn-primary" %>
      </div>
    <% end %>

