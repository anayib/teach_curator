<%= link_to 'Back', boards_path %>

<div class="col-lg-6">
  <div class="well bs-component">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>
      
      <h2>Log in</h2>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "col-lg-10 form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off", class: "col-lg-10 form-control"  %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <%= f.check_box :remember_me %> 
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div><%= f.submit "Log in", class: "btn btn-primary" %></div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
