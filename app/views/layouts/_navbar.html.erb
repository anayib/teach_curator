       <% end %> 
      </li>

      <% if user_signed_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= image_tag Gravatar.new(current_user.email).image_url(s: 30) if current_user%><%= current_user.username %> <strong class="caret"></strong></a>
