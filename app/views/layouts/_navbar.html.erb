<div class="navbar navbar-inverse">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-inverse-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a class="navbar-brand" href="#">Brand</a>
  </div> 

  <div class="navbar-collapse collapse navbar-inverse-collapse">
    <div class="input-group" style="margin-top: 9px" >
      <%= form_tag(boards_path, :method => "get", id: "search-form",class: "input-group-btn") do %>
        <div class="form-group">

                <%= text_field_tag :keyword, params[:keyword], autofocus: true, placeholder: "escribe palabras relacionadas con lo que quieres aprender", class: "form-control", style: "width: 92%" %>

                <%= submit_tag("buscar", class: "btn btn-default") %>
        </div>

      <% end %>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <li>
      <% if user_signed_in? %>
        <%= link_to "New Board", new_board_path %>
       <% else %>  
